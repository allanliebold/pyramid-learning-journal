{% extends "layout.jinja2" %}
{% block content %}
    <form method="POST">
        <table>
            <tr>
                <td><label for="title">Title:</label></td>
                <td><input type="text" name="title" required /></td>
            </tr>
            <tr>
                <td><label for="body">Write Entry:</label></td>
                <td><textarea rows="4" cols="50" required>Type here</textarea></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Post Entry" /></td>
            </tr>
        </table>
    </form>
{% endblock %}